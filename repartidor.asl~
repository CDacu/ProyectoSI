+!go_at_Delivery<-
    !go_at(repartidor,delivery).

+delivered(beer,Brand,Qtd,OrderId) : true <-
    !go_at(repartidor,fridge);
    .send(robot, tell, delivered(beer,Brand,Qtd,OrderId));
    deliverBeer(beer, Brand, Qtd);
    .wait(200);
    !go_at(repartidor,repartidorBase);
    -delivered(beer,Brand,Qtd,OrderId).

+delivered(Aperitivo,Qtd,OrderId) : true <-
    !go_at(repartidor,fridge);
    .send(robot, tell, delivered(Aperitivo,Qtd,OrderId));
    .wait(200);
    !go_at(repartidor,repartidorBase);
    -delivered(Aperitivo,Qtd,OrderId).

+!go_at(repartidor,P) : at(repartidor,P) <- 
	true.
+!go_at(repartidor,P) : not at(repartidor,P) <- 
	move_towards(P);
    !go_at(repartidor,P).
